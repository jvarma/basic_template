<% if current_user %>
	<% span1 = "span12" %>
<% else %>
	<% span1 = "span8" %>
<% end %>
<div class="row-fluid hero-unit">
	<div class="<%= span1 %>">
		<div class="center">
			<h2>There's more to it than meets the eye!</h2>
			<% if !current_user %>
				<%= link_to "sign up!", new_user_registration_path, class: "btn btn-large btn-primary" %><br /><br />
				<h2>or</h2>
				<p>Connect using one of your existing accounts!</p>
				<%= link_to image_tag("twitter_64.png", alt: "twitter"),
					'/auth/twitter'%>
				<%= link_to image_tag("facebook_64.png", alt: "facebook"),
					'/auth/facebook'%>
					
			<% end %>
		</div>
	</div>
	<% if !current_user %>
	<div class="span3">
		<div class="row-fluid">
			<%= render 'shared/sign_in_form' %>
		</div>
	</div>
	<% end %>
</div>
	

